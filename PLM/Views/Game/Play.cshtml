@model PLM.PlayViewModel
@{
    ViewBag.Title = "View1";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>About Us | Triangle</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Conent/animate.min.css" rel="stylesheet">
    <link href="~/Conetnt/lightbox.css" rel="stylesheet">
    <link href="~/Content/main.css" rel="stylesheet">
    <link href="~/Content/responsive.css" rel="stylesheet">
</head><!--/head-->
<body>
    <audio id="audioCorrect" preload="auto">
        <source src="~/Content/Audio/correctSound.mp3" type="audio/mp3" />
    </audio>
    <audio id="audioIncorrect" preload="auto">
        <source src="~/Content/Audio/incorrectSound.mp3" type="audio/mp3" />
    </audio>
    <img id="picture" src="@Model.ImageURL" />
    <p id="StoredAnswer" display="none">@Model.Answer</p>
    <div>
        <p id="rightORwrong">0</p>
        @for (int i = 0; i < Model.possibleAnswers.Count; i++)
        { 
        @*the javascript "this" keyword is used in the function call to refer to the sender, instead of an id.*@
        <button @*id="button1"*@ class="btn btn-primary" onclick="ButtonClick(this.innerText)">@Model.possibleAnswers.ElementAt(i)</button>
        @*<button id="button2" class="btn btn-primary" onclick="ButtonClick(button2.innerText)">@Model.possibleAnswers.ElementAt(1)</button>
        <button id="button3" class="btn btn-primary" onclick="ButtonClick(button3.innerText)">@Model.possibleAnswers.ElementAt(2)</button>*@
        }
    </div>
    <script type="text/javascript" src="~/Scripts/gameplay.js"></script>
</body>